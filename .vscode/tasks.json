{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Customize Build",
            "type": "process",
            "command": "/bin/bash",
            "args": [
                "-c",
                "g++ \"${file}\" -o a.out && ./a.out < input.txt > output.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Generated task by vscode"
        },

        {
    "label": "Build For Debug",
    "type": "process",
    "command": "/bin/bash",
    "args": [
        "-c",
        "g++ -g -O0 \"${file}\" -o a.out"
    ],
    "group": {
        "kind": "build",
        "isDefault": false
    },
    "detail": "Build with debug symbols"
},
